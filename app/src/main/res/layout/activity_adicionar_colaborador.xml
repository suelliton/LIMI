<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdicionarColaborador">
<LinearLayout
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:labelFor="@id/pesquisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o nome de um usuário"/>
    <EditText
        android:id="@+id/pesquisa"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatButton
    android:id="@+id/btn_pesquisar_colaborador"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:layout_marginTop="24dp"
    android:padding="12dp"
    android:text="Pesquisar" />
    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o nome de um usuário"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_adicionar_colaborador"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="Adicionar colaborador" />
</LinearLayout>

</android.support.constraint.ConstraintLayout>